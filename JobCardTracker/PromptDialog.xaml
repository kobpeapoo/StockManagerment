<Window x:Class="InventoryManagerment.JobCardTracker.PromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryManagerment.JobCardTracker"
        mc:Ignorable="d"
        Title="PromptDialog" MinHeight="200" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight" WindowStyle="ToolWindow">

    <StackPanel Margin="5">
        <TextBlock Name="txtQuestion" Margin="5"/>
        <TextBox Name="txtResponse" Margin="5" Height="30" VerticalContentAlignment="Center"/>
        <PasswordBox Name="txtPasswordResponse" Height="30" Margin="5,0" VerticalContentAlignment="Center" />
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="ตกลง" IsDefault="True" Margin="5" Name="btnOk" Click="btnOk_Click" Height="35" Width="100" />
            <Button Content="ยกเลิก" IsCancel="True" Margin="5" Name="btnCancel" Click="btnCancel_Click" Width="100" />
        </StackPanel>
    </StackPanel>

</Window>
